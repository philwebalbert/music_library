<h1>Admin Area Login</h1>

<%= form_tag("/admin/login", :method => :post) do %>
	<%= error_messages_for 'user' %>
	
	<div class="field">
   		<%= label_tag :username %><br />
    	<%= text_field :user, :name %>
  	</div>
  	<div class="field">
   		<%= label_tag :Password %><br />
    	<%= password_field :user, :hashed_password %>
  	</div>
  	
  	<div class="actions">
    	<%= submit_tag "Log in" %>
  	</div>
  	
<% end -%>
