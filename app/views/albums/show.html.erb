<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @album.title %>
</p>

<p>
  <b>Artist:</b>
  <%= link_to(@album.artist.name, @album.artist) if @album.artist %>
</p>

<p>
  <b>Release date:</b>
  <%= @album.release_date %>
</p>

<p>
  <b>Genre:</b>
  <%= @album.genre %>
</p>

<p>
  <b>Created at:</b>
  <%= @album.created_at %>
</p>

<p>
  <b>Update at:</b>
  <%= @album.updated_at %>
</p>

<p>
  <b>Image Path:</b>
  <%= @album.image_path %>
</p>

<p>
  <b>Features:</b><br/>
  <% for feature in @album.features -%>	
  	<%= feature.name %><br/>
  <% end -%>
</p>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
