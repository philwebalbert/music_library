<!DOCTYPE >
<html>
	<head>
		<title>Album List</title>
		<%= stylesheet_link_tag :all %>
  		<%= javascript_include_tag :defaults %>
  		<%= csrf_meta_tag %>
	</head>	
	<body>
		<% for album in @albums -%>
			<%= link_to(album.title, :controller => 'public', :action => 'show', :id => album.id) %> - <%= album.artist %><br/> 
		<% end -%>
		<br/>
		<%= link_to('New', :controller => 'public', :action => 'new')%>
	</body>	
</html>
