<!DOCTYPE >
<html>
	<head>
		<title>Create Album</title>
		<%= stylesheet_link_tag :all %>
  		<%= javascript_include_tag :defaults %>
  		<%= csrf_meta_tag %>
	</head>	
	<body>
		
		<% form_tag('/public/create', :method => :post) do %>
			<%= error_messages_for(:album) %>
			<br/>
			Title : <%= text_field_tag('album[title]', @album.title) %><br/>
			Artist : <%= text_field_tag('album[artist]', @album.artist) %><br/>
			Genre : <%= text_field_tag('album[genre]', @album.genre) %><br/>
			Release Date : <%= datetime_select(:album, :release_date, :start_year => 1960, :date_separator => '-', :time_separator => ':', :datetime_separator => ' ', :prompt => true) %><br/>
			
			<%= submit_tag("Create")%>
			
		<% end %>	
		<%= debug(@album.errors) %>	
	</body>	
</html>
